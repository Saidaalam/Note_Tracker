<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Light Level Text -->
    <TextView
        android:id="@+id/lightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light level: "
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Motion Detected Text -->
    <TextView
        android:id="@+id/motionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion detected: "
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lightTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Ambient Temperature Text -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambient temperature: "
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/motionTextView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
